{
  "name": "am",
  "displayName": "Am Test",
  "description": "Am Test support for Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "basjoofan",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/basjoofan/am",
  "engines": {
    "vscode": "^1.68.0"
  },
  "keywords": [
    "am",
    "test"
  ],
  "categories": [
    "Testing",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:*.am"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/vsce": "^2.27.0",
    "eslint": "^8.26.0",
    "typescript": "^5.4.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "am",
        "aliases": [
          "Am",
          "am"
        ],
        "extensions": [
          ".am"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "am",
        "scopeName": "source.am",
        "path": "./syntaxes/am.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "am.call.cursor",
        "title": "Am: Test Request At Cursor",
        "description": "Runs a unit test at the cursor."
      }
    ]
  },
  "menus": {
    "editor/context": [
      {
        "when": "resourceLangId == am",
        "command": "am.call.cursor",
        "group": "Am group 1"
      }
    ]
  }
}
